<!-- XMLPath /MorpheusML/Global -->
	<xs:group name="GlobalPlugins">
		<xs:choice>
			<xs:element name="ExtSymbol"	type="ExtSymbolPlugin"/>
		</xs:choice>
	</xs:group>

