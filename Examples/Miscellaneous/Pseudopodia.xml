<?xml version='1.0' encoding='UTF-8'?>
<MorpheusModel version="3">
    <Description>
        <Title>Example-Pseudopodia</Title>
        <Details>Model for cell pseudopodia using an actin skeleton

            Reference:
            Beltman JB, Marée AFM, de Boer RJ. Spatial modelling of brief and long interactions between T cells and
            dendritic cells. Immunol Cell Biol (2007) 85:306–314. doi:10.1038/sj.icb.7100054
        </Details>
    </Description>
    <Global>
        <Field symbol="act" value="0" name="actin skeleton">
            <Diffusion rate="0"/>
        </Field>
    </Global>
    <Space>
        <Lattice class="square">
            <Size symbol="size" value="200,200, 0"/>
            <Neighborhood>
                <Order>2</Order>
            </Neighborhood>
            <BoundaryConditions>
                <Condition boundary="x" type="noflux"/>
                <Condition boundary="y" type="noflux"/>
            </BoundaryConditions>
        </Lattice>
        <SpaceSymbol symbol="l" name="lattice"/>
    </Space>
    <Time>
        <StartTime value="0"/>
        <StopTime value="5000"/>
        <TimeSymbol symbol="time"/>
    </Time>
    <CellTypes>
        <CellType class="biological" name="amoeba">
            <VolumeConstraint target="300" strength="10"/>
            <ConnectivityConstraint/>
            <Pseudopodia max-pseudopods="3" retract-on-touch="false" field="act" moving-direction="d.phi" retraction-mode="in-moving-direction" max-growth-time="30" cont-dir-strength="1e4"/>
            <PropertyVector symbol="d" value="0, 0, 0" name="moving direction"/>
            <MotilityReporter time-step="10">
                <Velocity symbol-ref="d"/>
            </MotilityReporter>
            <SurfaceConstraint target="0.8" mode="aspherity" strength="1"/>
        </CellType>
        <CellType class="medium" name="medium"/>
    </CellTypes>
    <CPM>
        <Interaction>
            <Contact type1="amoeba" type2="medium" value="1"/>
            <Contact type1="amoeba" type2="amoeba" value="1"/>
        </Interaction>
        <MonteCarloSampler stepper="edgelist">
            <MCSDuration value="1"/>
            <Neighborhood>
                <Order>1</Order>
            </Neighborhood>
            <MetropolisKinetics temperature="20"/>
        </MonteCarloSampler>
        <ShapeSurface scaling="norm">
            <Neighborhood>
                <Order>2</Order>
            </Neighborhood>
        </ShapeSurface>
    </CPM>
    <CellPopulations>
        <Population size="0" type="amoeba">
            <InitRectangle mode="regular" number-of-cells="20">
                <Dimensions size="200.0, 200.0, 1.0" origin="0.0, 0.0, 0.0"/>
            </InitRectangle>
        </Population>
    </CellPopulations>
    <Analysis>
        <Gnuplotter time-step="10" decorate="false">
            <Terminal opacity="0.2" name="png"/>
            <Plot>
                <Cells value="cell.id"/>
                <Field data-cropping="false" symbol-ref="act" max="1">
                    <ColorMap>
                        <Color value="1" color="gray0"/>
                        <Color value="0" color="grey100"/>
                    </ColorMap>
                </Field>
            </Plot>
        </Gnuplotter>
        <Logger time-step="10">
            <Input>
                <Symbol symbol-ref="cell.center.x"/>
                <Symbol symbol-ref="cell.center.y"/>
            </Input>
            <Output>
                <TextOutput/>
            </Output>
            <!--    <Disabled>
        <Plots>
            <Plot time-step="-1">
                <Style style="lines" line-width="2.0"/>
                <Terminal terminal="png"/>
                <X-axis>
                    <Symbol symbol-ref="cell.center.x"/>
                </X-axis>
                <Y-axis>
                    <Symbol symbol-ref="cell.center.y"/>
                </Y-axis>
                <Color-bar>
                    <Symbol symbol-ref="time"/>
                </Color-bar>
                <Disabled>
                    <Range>
                        <Time mode="history"/>
                    </Range>
                </Disabled>
            </Plot>
        </Plots>
    </Disabled>
-->
            <Restriction>
                <Celltype celltype="amoeba"/>
            </Restriction>
        </Logger>
    </Analysis>
</MorpheusModel>
