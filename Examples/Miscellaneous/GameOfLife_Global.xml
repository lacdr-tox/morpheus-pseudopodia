<?xml version='1.0' encoding='UTF-8'?>
<MorpheusModel version="3">
    <Description>
        <Details>This model shows:
- how to implement a simple cellular automata using a Global/Field.
- how to use NeighborhoodReporter to report on neighboring lattice sites within Fields.
</Details>
        <Title>Example-Game-of-Life-Field</Title>
    </Description>
    <Global>
        <Field symbol="s" value="if(rand_uni(0,1) > 0.75, 1, 0)">
            <Diffusion rate="0"/>
        </Field>
        <Field symbol="sum" value="0">
            <Diffusion rate="0.0"/>
        </Field>
        <System solver="euler" time-step="1.0" name="Rules of life">
            <Rule symbol-ref="s">
                <Expression>if((s == 1 and sum >= w and sum &lt;= x ), 1,
if((s == 0 and sum >= y and sum &lt;= z ), 1, 0))
                    </Expression>
            </Rule>
            <Constant symbol="w" value="2"/>
            <Constant symbol="x" value="3"/>
            <Constant symbol="y" value="3"/>
            <Constant symbol="z" value="3"/>
        </System>
        <NeighborhoodReporter>
            <Input value="s"/>
            <Output symbol-ref="sum" mapping="sum"/>
        </NeighborhoodReporter>
    </Global>
    <Space>
        <Lattice class="square">
            <Neighborhood>
                <Order>2</Order>
            </Neighborhood>
            <Size symbol="size" value="200,200,0"/>
        </Lattice>
        <SpaceSymbol symbol="space"/>
    </Space>
    <Time>
        <StartTime value="0"/>
        <StopTime value="1000"/>
        <TimeSymbol symbol="time"/>
    </Time>
    <Analysis>
        <Gnuplotter time-step="1" decorate="false">
            <Terminal name="png"/>
            <Plot>
                <Field symbol-ref="s">
                    <ColorMap>
                        <Color value="1" color="black"/>
                        <Color value="0.0" color="white"/>
                    </ColorMap>
                </Field>
            </Plot>
        </Gnuplotter>
    </Analysis>
</MorpheusModel>
